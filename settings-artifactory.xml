<settings>
    <servers>
        <server>
            <id>nexus</id>
            <username>${env.ARTIFACTORY_USER}</username>
            <password>${env.ARTIFACTORY_PASS}</password>
        </server>
    </servers>

    <mirrors>
        <mirror>
            <id>central</id>
            <name>Artifactory</name>
            <url>${env.ARTIFACTORY_URL}/maven-all</url>
            <mirrorOf>*</mirrorOf>
        </mirror>
    </mirrors>

    <profiles>
        <profile>
            <id>artifactory</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>${env.ARTIFACTORY_URL}/maven-all</url>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>artifactory</activeProfile>
    </activeProfiles>
</settings>
